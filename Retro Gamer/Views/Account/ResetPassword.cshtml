@model ResetPasswordViewModel
@{
    ViewBag.Title = "Reset memory";
}
<br />
<br />
<br />
<br />
<div class="login-form ">
    <h1>Reset Password</h1>
    <form method="post">
        <div asp-validation-summary="All" class="text-white"></div>
        <div class="form-group">
            <input id="input" asp-for="Email" placeholder="Email Addresse" />
            <span class="input-icon" id="input-icon"><i class="ion-at"></i></span>
            <div asp-validation-for="Email" class="text-white"></div>
        </div>
        <div class="form-group">
            <input id="input" asp-for="Password" placeholder="Password" />
            <span class="input-icon" id="input-icon"><i class="ion-locked"></i></span>
            <div asp-validation-for="Password" class="text-white"></div>
        </div>
        <div class="form-group">
            <input id="input" asp-for="ConfirmPassword" placeholder="Confirm Password" />
            <span class="input-icon" id="input-icon"><i class="ion-locked"></i></span>
            <div asp-validation-for="ConfirmPassword" class="text-white"></div>
        </div>
        <input type="hidden" asp-for="Email" class="form-control" />
        <input type="hidden" asp-for="Token" class="form-control" />
        <button class="login-btn" type="submit">Reset password</button>
    </form>
</div>