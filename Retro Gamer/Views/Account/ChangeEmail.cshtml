@model ChangeEmailViewModel
@{
    ViewBag.Title = "Change Email";
}

    <form method="post" asp-action="ChangeEmail" asp-controller="Account">
        <h4>Change Email</h4>
        @if(TempData["AlreadyInUseEmail"]!= null)
        {
            <p class="text-success">@TempData["AlreadyInUseEmail"]</p>
        }
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="NewEmail" class="form-control" placeholder="New Email Address" />
            <span asp-validation-for="NewEmail" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>